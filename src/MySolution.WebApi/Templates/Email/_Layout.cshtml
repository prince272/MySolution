@using MySolution.WebApi.Helpers

<!DOCTYPE html>
<html lang="en" style="margin:0; padding:0; height:100%; width:100%;">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="format-detection" content="telephone=no">
  @RenderSection("Title", required: true)

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet">

  <style type="text/css">
    /* Reset and base styles */
    html, body, table, td, tr {
      margin: 0;
      padding: 0;
      border: 0;
      font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      line-height: 1.5;
      color: #1f2937;
      background-color: #f8f9fa;
      width: 100%;
      height: 100%;
      -webkit-font-smoothing: antialiased;
      -webkit-text-size-adjust: 100%;
    }
    table { border-collapse: collapse; }
    img { display: block; border: 0; line-height: 100%; height: auto; outline: none; }

    :root {
      color-scheme: light dark;
      supported-color-schemes: light dark;
    }

    /* Layout */
    .outer { width: 100%; background-color: #f8f9fa; }
    .wrapper {
      max-width: 640px;
      margin: 0 auto;
      background: rgba(255,255,255,0.75);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 12px 32px rgba(0,0,0,0.08);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(0,0,0,0.08);
      padding: 0; /* tighter edges */
    }

    /* Header */
    .header {
      background: #000;
      padding: 16px 16px;
      text-align: center;
    }
    .header h1 { color: #fff; font-size: 17px; font-weight: 900; letter-spacing: -0.3px; margin: 0; }

    /* Content */
    .content-area { padding: 16px 16px 16px; text-align: center; }
    .action-title { font-size: 24px; font-weight: 900; text-transform: uppercase; letter-spacing: -0.5px; margin-bottom: 12px; color: #000; line-height: 1.25; }
    .main-message { font-size: 15px; line-height: 1.55; margin-bottom: 16px; color: #374151; }

    .code-container { margin: 16px 0; text-align: center; }
    .code {
      display: inline-block;
      font-size: 28px;
      font-weight: 900;
      letter-spacing: 6px;
      padding: 12px 24px;
      background: rgba(255,255,255,0.85);
      border-radius: 12px;
      color: #111827;
      border: 1px solid rgba(0,0,0,0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      box-shadow: 0 4px 16px rgba(0,0,0,0.06);
      line-height: 1.1;
      margin: 0 auto;
    }

    .info { font-size: 13px; color: #6b7280; line-height: 1.45; margin-top: 12px; }
    .warning {
      color: #ef4444;
      font-weight: 600;
      background: rgba(239,68,68,0.08);
      padding: 3px 10px;
      border-radius: 6px;
      display: inline-block;
    }

    .spacer { height: 20px; font-size: 0; line-height: 0; }

    /* Footer */
    .footer { background: #000; padding: 16px; text-align: center; font-size: 12px; color: #d1d5db; }
    .footer p { margin: 0 0 6px; }
    .footer p:last-child { margin-top: 8px; }

    /* Responsive */
    @@media only screen and (max-width: 600px) {
      .wrapper { border-radius: 0; box-shadow: none; }
      .content-area { padding: 12px 12px; }
      .header { padding: 12px 12px; }
      .header h1 { font-size: 16px; }
      .action-title { font-size: 21px; letter-spacing: -0.4px; }
      .main-message { font-size: 14px; }
      .code { font-size: 24px; letter-spacing: 5px; padding: 10px 20px; }
      .footer { padding: 12px 12px; }
    }
  </style>
</head>
<body>

  <table width="100%" class="outer">
    <tr>
      <td align="center" valign="top">

        <table class="wrapper" width="100%">
          <!-- Header -->
          <tr>
            <td class="header">
              <h1>WhatsApp</h1>
            </td>
          </tr>

          <!-- Main content -->
          @RenderBody()

          <!-- Footer -->
          <tr>
            <td class="footer">
              <p>©@(DateTimeOffset.UtcNow.Year) MySolution. All rights reserved.<br>
                <a href="{{website}}" style="color:#d1d5db;">{{website}}</a> • 
                <a href="{{support_link}}" style="color:#d1d5db;">Help & Support</a>
              </p>
              <p>Questions? Reach us at <a href="mailto:support@yourapp.com" style="color:#d1d5db;">support@yourapp.com</a></p>
            </td>
          </tr>
        </table>

      </td>
    </tr>
  </table>

</body>
</html>